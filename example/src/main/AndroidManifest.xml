<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mparticle.appsflyer.example">

    <application android:allowBackup="true" android:icon="@mipmap/ic_launcher" android:name=".ExampleApplication"
        android:label="@string/app_name" android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true" android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <intent-filter>
                <action   android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data     android:scheme="mparticle" />
                <!-- REPLACE with your onelink host-->
                <data android:scheme="https"
                    android:host="mparticle.onelink.me"/>
            </intent-filter>
        </activity>
        <!-- Add the mParticle SDK's ReferrerReceiver to your manifest. -->
        <!-- You *cannot* have more than one receiver in your manifest that listens for this Intent -->
        <!-- If you already have your own receiver, then you must forward data within that receiver to our receiver -->
        <!-- See ExampleReceiver.java or docs.mparticle.com/developers/sdk/android/getting-started/#google-play-install-referrer -->
        <receiver android:name="com.mparticle.ReferrerReceiver" android:exported="true">
            <intent-filter>
                <action android:name="com.android.vending.INSTALL_REFERRER"/>
            </intent-filter>
        </receiver>

    </application>

</manifest>